<Window x:Class="LifestyleDesign.frmLevelManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LifestyleDesign"
        mc:Ignorable="d"
        Title="Level Manager"
        Height="Auto"
        Width="Auto"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!--Instruction Row-->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left">
            <Label Content="Enter plate adjustments in decimal inches:"/>
            <Label Content="(Use + to raise, - to lower)" FontSize="10" Foreground="Gray" Margin="0,-5,0,0" />
        </StackPanel>

        <!--Global Input Row as Grid-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox Grid.Column="0" x:Name="cbxGlobal" 
              Content="Apply same adjustment to all levels:"
              VerticalAlignment="Center"
              Checked="cbxGlobal_Checked"
              Unchecked="cbxGlobal_Unchecked"/>
            <TextBox Grid.Column="1" x:Name="txtGlobalAdjustment"
         Width="60" Height="25"
         Margin="10,0,0,0"
         VerticalAlignment="Center"
         IsEnabled="False"
         TextChanged="txtGlobalAdjustment_TextChanged"/>
        </Grid>

        <!--Dynamic Panel-->
        <StackPanel Grid.Row="2">
            <StackPanel x:Name="sp"/>
        </StackPanel>

        <!--First Floor Windows Section-->
        <StackPanel Grid.Row="3" Margin="0,5,0,0">
            <Label Content="First Floor Windows:" FontWeight="Bold" Margin="0,0,0,3"/>
            <CheckBox x:Name="chkFirstFloorHeadHeights" 
              Content="Adjust head heights with plate adjustment" 
              Margin="0,0,0,5"
              Checked="chkFirstFloorHeadHeights_Checked"
              Unchecked="chkFirstFloorHeadHeights_Unchecked"/>
            <CheckBox x:Name="chkFirstFloorWindowHeights" 
              Content="Adjust heights with plate adjustments" 
              Margin="0,0,0,5"
              IsEnabled="False"/>

            <!-- Second Floor Section -->
            <StackPanel x:Name="spSecondFloorSection">
                <Label Content="Second Floor Windows:" FontWeight="Bold" Margin="0,0,0,3"/>
                <CheckBox x:Name="chkSecondFloorHeadHeights" 
                  Content="Adjust head heights with plate adjustment" 
                  Margin="0,0,0,5"
                  Checked="chkSecondFloorHeadHeights_Checked"
                  Unchecked="chkSecondFloorHeadHeights_Unchecked"/>
                <CheckBox x:Name="chkSecondFloorWindowHeights" 
                  Content="Adjust heights with plate adjustments" 
                  Margin="0,0,0,0"
                  IsEnabled="False"/>
            </StackPanel>
        </StackPanel>

        <!--Warning Row-->
        <StackPanel Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label x:Name="lblWarning" 
           Content="Level ordering conflicts detected." 
           Foreground="Red" 
           FontWeight="Bold"
           FontSize="14"
           Visibility="Collapsed"/>
        </StackPanel>

        <!--Buttons Section-->
        <StackPanel Grid.Row="5"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
            <Button x:Name="btnOK"
                    Content="OK"
                    Width="75"
                    Height="25"
                    Margin="0,0,10,0"
                    IsDefault="True"
                    Click="btnOK_Click"/>
            <Button x:Name="btnCancel"
                    Content="Cancel"
                    Width="75"
                    Height="25"
                    Margin="0,0,10,0"
                    IsCancel="True"
                    Click="btnCancel_Click"/>
            <Button x:Name="btnHelp"
                    Content="Help"
                    Width="75"
                    Height="25"
                    Click="btnHelp_Click"/>
        </StackPanel>
    </Grid>
</Window>
