<Window x:Class="LifestyleDesign.frmUncategorizedViewsWarning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Uncategorized Views Found" Height="450" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header section with icon and warning text -->
        <Grid Grid.Row="0" Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Warning Icon -->
            <Grid Grid.Column="0" 
           Width="32" 
           Height="32" 
           Margin="0,0,15,0"
           VerticalAlignment="Top">
                <Ellipse Fill="#FFD700" 
                  Width="32" 
                  Height="32"/>
                <TextBlock Text="!" 
                    FontSize="20" 
                    FontWeight="Bold" 
                    Foreground="Black"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"/>
            </Grid>

            <!-- Warning text -->
            <TextBlock Grid.Column="1" 
                Text="Warning: The following views are uncategorized. Assign them to a category or delete them."
                FontSize="16"
                FontWeight="SemiBold"
                Foreground="#1E3A8A"
                TextWrapping="Wrap"
                VerticalAlignment="Center"/>
        </Grid>

        <!-- Content text -->
        <TextBlock Grid.Row="1" 
            x:Name="ContentTextBlock"
            FontSize="11"
            Foreground="#374151"
            TextWrapping="Wrap"
            LineHeight="16"
            Margin="0,0,0,10"/>

        <!-- List of Views -->
        <ListBox x:Name="ViewList"
                 Grid.Row="1"
                 FontSize="14"
                 Height="280"
                 BorderBrush="Gray"
                 BorderThickness="1" />

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="0,0,10,0" Click="OK_Click"/>
            <Button Content="Cancel" Width="75" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
