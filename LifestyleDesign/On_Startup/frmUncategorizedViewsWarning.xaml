<Window x:Class="LifestyleDesign.On_Startup.frmUncategorizedViewsWarning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LifestyleDesign.On_Startup"
        mc:Ignorable="d"
        Title="frmUncatagorizedViewsWarning"
        Height="180"
        Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="White">
    
    
    
    
    <Grid Margin="10">
        <!-- Main content area with padding similar to TaskDialog -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header section with icon and warning text -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Warning Icon -->
                <Grid Grid.Column="0" 
                      Width="32" 
                      Height="32" 
                      Margin="0,0,15,0"
                      VerticalAlignment="Top">
                    <Ellipse Fill="#FFD700" 
                             Width="32" 
                             Height="32"/>
                    <TextBlock Text="!" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="Black"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- Warning text -->
                <TextBlock Grid.Column="1" 
                           Text="Warning: The following views are uncategorized. Assign them to a category or delete them:."
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#1E3A8A"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- Content text -->
            <TextBlock Grid.Row="1" 
                       x:Name="ContentTextBlock"
                       FontSize="11"
                       Foreground="#374151"
                       TextWrapping="Wrap"
                       LineHeight="16"
                       Margin="0,0,0,10"/>

            <!-- Button area -->
            <Grid Grid.Row="2">
                <Button x:Name="btnClose"
                        Content="Close" 
                        Width="75" 
                        Height="25"
                        HorizontalAlignment="Right"
                        Background="#E5E7EB"
                        BorderBrush="#9CA3AF"
                        BorderThickness="1"
                        FontSize="11"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="3">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#D1D5DB"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#9CA3AF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>

        <!-- Bottom border line like TaskDialog -->
        <Rectangle Height="1" 
                   VerticalAlignment="Bottom" 
                   Fill="#E5E7EB" 
                   Margin="0,0,0,35"/>
    </Grid>
</Window>